@model List<Category>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1 class="mb-4">
                Danh sách thể loại
            </h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Tạo thể loại mới
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Tên thể loại
            </th>
            <th>
                Thứ tự hiển thị
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-fill"></i> Sửa
                    </a>

                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Xóa
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>